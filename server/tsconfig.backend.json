{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "outDir": "../build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}